<h1>Beach Tennis Itanhangá - Ranking</h1>
<hr>
<%# Ver jogadores/editar e criar novos %>
<section>
  <h4>Jogadores</h4>
  <%= link_to 'Criar novo jogador', new_player_path %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Sexo</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @players&.each do |player| %>
        <tr>
          <td><%= player.name.titleize %></td>
          <td><%= player.gender %></td>
          <td><%= link_to 'Editar', edit_player_path(player) %>
          <%= link_to 'Excluir', player_path(player), data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action is irreversible." } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%# Partidas %>
<%= link_to 'Criar nova partida', new_match_path %>
<section>
  <h4>Partidas</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Data</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.match_date %>, <%= match.day %></td>
          <td>
          <%= link_to 'Ver partida', match_path(match) %>
          <%= link_to 'Editar', edit_match_path(match) %>
          <%= link_to 'Excluir', match_path(match), data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action is irreversible." } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section>
  <h4>Ranking Geral</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Posição</th>
        <th>Nome</th>
        <th>Pontos</th>
        <th>Confrontos</th>
        <th>Games Ganhos</th>
        <th>Games Perdidos</th>
        <th>Saldo Games</th>
      </tr>
    </thead>
    <tbody>
      <% @players&.each_with_index do |player, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= player.name %></td>
          <td><%= player.sets_won %></td>
          <td><%= player.matches %></td>
          <td><%= player.games_won %></td>
          <td><%= player.games_lost %></td>
          <td><%= player.games_balance %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

