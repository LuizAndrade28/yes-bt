<section class="px-5">
  <h2 class="mt-5 mb-3 pt-4 text-center">Partida <%= @match.id %></h2>
  <% if @match.plays.count != 3 %>
    <%= link_to 'Criar novo play', new_match_play_path(@match), class:"btn btn-warning rounded-4 text-white" %>
  <% end %>
  <%= link_to "Voltar", matches_path, class:"btn btn-warning rounded-4 text-white" %>
  <table class="mt-3 table table-striped">
    <thead>
      <tr>
        <th>Play</th>
        <th>Dupla 1</th>
        <th>Games</th>
        <th>Dupla 2</th>
        <th>Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @plays&.each_with_index do |play, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= play.play_players[0].player.name  %> e <%= play.play_players[1].player.name %></td>
          <td><%= play.play_players[0].games_won %> x <%= play.play_players[2].games_won %></td>
          <td><%= play.play_players[2].player.name %> e <%= play.play_players[3].player.name %></td>
          <td>
            <%= link_to 'Editar', edit_match_play_path(@match, play), class: "opt-color"%>
            /
            <%= link_to 'Excluir', match_play_path(@match, play), class: "opt-color", data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action is irreversible." } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
